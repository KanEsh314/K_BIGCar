<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/reviewCard"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/largeMargin" >
    
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/userPicture"
            android:layout_width="@dimen/profileImage"
            android:layout_height="@dimen/profileImage"
            android:scaleType="centerCrop"
            android:src="@mipmap/ic_world"
            android:layout_margin="@dimen/mediumMargin"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_toEndOf="@id/userPicture"
            android:padding="@dimen/mediumPadding">

            <TextView
                android:id="@+id/rateUsername"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="The Rock"
                android:textColor="@color/colorDark"
                android:textStyle="bold"
                android:textSize="@dimen/smallUniversalText"/>

            <RatingBar
                android:id="@+id/ratingGiven"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="?android:attr/ratingBarStyleSmall"
                android:numStars="5"
                android:stepSize="1"
                android:progressTint="@color/colorBlue"
                android:paddingBottom="8dp"
                android:paddingTop="8dp"/>

            <TextView
                android:id="@+id/userReview"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Lorem Ipsum is simply dummy text of the printing and typesetting industry."
                android:textColor="@color/colorDark"
                android:textSize="@dimen/smallUniversalText"/>

        </LinearLayout>
    </RelativeLayout>
</android.support.v7.widget.CardView>