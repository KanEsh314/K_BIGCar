<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="my.com.itrain.big_car.SavedContentFragment">

    <TextView
        android:id="@+id/savedTitle"
        android:text="@string/savedTitle"
        android:layout_margin="@dimen/universalMargin"
        android:textSize="@dimen/largeUniversalText"
        android:textColor="@color/colorDark"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    
    <TextView
        android:layout_margin="@dimen/universalMargin"
        android:textColor="@color/colorDark"
        android:text="@string/savedEmpty"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/saveButton"
        android:text="@string/savedButton"
        android:layout_margin="@dimen/universalMargin"
        android:textColor="@color/colorDark"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

</LinearLayout>
