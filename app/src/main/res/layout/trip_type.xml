<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.NestedScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_height="wrap_content"
    android:layout_width="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="#EAEFF2">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="@dimen/smallPadding"
                android:paddingLeft="@dimen/mediumPadding"
                android:paddingBottom="@dimen/smallPadding"
                android:text="Economy"
                android:textSize="@dimen/smallUniversalText"
                android:textColor="#92979d"/>

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_margin="@dimen/mediumMargin"
                android:scaleType="centerCrop"
                android:src="@mipmap/ic_action_seats"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="4 Seats"
                android:textSize="@dimen/smallUniversalText"
                android:layout_gravity="center_vertical"/>

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="#EAEFF2">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="@dimen/smallPadding"
                android:paddingLeft="@dimen/mediumPadding"
                android:paddingBottom="@dimen/smallPadding"
                android:text="Premium"
                android:textSize="@dimen/smallUniversalText"
                android:textColor="#92979d"/>

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_margin="@dimen/mediumMargin"
                android:scaleType="centerCrop"
                android:src="@mipmap/ic_action_seats"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="4 Seats"
                android:textSize="@dimen/smallUniversalText"
                android:layout_gravity="center_vertical"/>

        </LinearLayout>
    </LinearLayout>

</android.support.v4.widget.NestedScrollView>