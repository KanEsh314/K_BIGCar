<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/placeContent"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:paddingBottom="@dimen/mediumPadding">

    <ImageView
        android:id="@+id/popularImg"
        android:layout_width="match_parent"
        android:layout_height="240dp"
        android:scaleType="centerCrop"
        android:src="@drawable/photo" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_below="@id/popularImg"
        android:layout_alignStart="@id/popularImg"
        android:layout_alignEnd="@id/popularImg"
        android:paddingTop="@dimen/mediumPadding"
        android:paddingLeft="@dimen/mediumPadding">

        <TextView
            android:id="@+id/popularName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="HALF DAY KUALA LUMPUR CITY TOUR TOUR"
            android:textColor="@color/colorDark"
            android:textSize="@dimen/mediumUniversalText"
            android:textAlignment="textStart"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/popularDesc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="For short or long tern visitors in Kuala Lumpur this is perfect opportunity to visit landmarks to Kuala Lumpur city. On tour we will take you to some of most important sightseeing attractions."
            android:textColor="@color/colorDark"
            android:textSize="@dimen/smallUniversalText"
            android:textAlignment="textStart"
            />

        <LinearLayout
            android:id="@+id/ratingLayout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <RatingBar
                android:id="@+id/popularStar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="?android:attr/ratingBarStyleSmall"
                android:layout_below="@id/popularName"
                android:numStars="5"
                android:stepSize="1.0"/>

            <TextView
                android:id="@+id/popularStarText"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="75"
                android:textColor="@color/colorDark"
                android:textSize="@dimen/smallUniversalText"
                android:gravity="center"
                android:progressTint="@color/colorBlue"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_below="@+id/ratingLayout">

            <TextView
                android:id="@+id/popularPrice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:text="RM40"
                android:textColor="@color/colorDark"
                android:textSize="@dimen/mediumUniversalText" />

        </LinearLayout>
    </LinearLayout>
</LinearLayout>