<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="@dimen/largeMargin"
    app:cardCornerRadius="8dp">

    <LinearLayout
        android:id="@+id/placeContent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="@dimen/mediumPadding">

        <ImageView
            android:id="@+id/popularImg"
            android:layout_width="match_parent"
            android:layout_height="240dp"
            android:scaleType="centerCrop"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_below="@id/popularImg"
            android:layout_alignStart="@id/popularImg"
            android:layout_alignEnd="@id/popularImg"
            android:paddingTop="@dimen/mediumPadding"
            android:paddingLeft="@dimen/mediumPadding">

            <TextView
                android:id="@+id/popularName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/colorDark"
                android:textSize="@dimen/mediumUniversalText"
                android:textAlignment="textStart"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/popularLocation"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/colorDark"
                android:textSize="@dimen/smallUniversalText"
                android:textAlignment="textStart"/>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_below="@+id/popularLocation">

                <TextView
                    android:id="@+id/popularDesc"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentTop="true"
                    android:textColor="@color/colorDark"
                    android:textSize="@dimen/mediumUniversalText" />

            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</android.support.v7.widget.CardView>