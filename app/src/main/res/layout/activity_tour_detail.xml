<?xml version="1.0" encoding="utf-8"?>

<android.support.design.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    android:background="@android:color/background_light"
    android:fitsSystemWindows="true"
    tools:context="my.com.itrain.big_car.TourDetailActivity">

    <android.support.design.widget.AppBarLayout
        android:id="@+id/appbar"
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
        android:fitsSystemWindows="true">

        <android.support.design.widget.CollapsingToolbarLayout
            android:id="@+id/main.collapsing"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:layout_scrollFlags="scroll|exitUntilCollapsed"
            android:fitsSystemWindows="true"
            app:contentScrim="@color/colorPrimary"
            app:expandedTitleMarginStart="48dp"
            app:expandedTitleMarginEnd="64dp">

            <ImageView
                android:id="@+id/tourImage"
                android:layout_width="match_parent"
                android:layout_height="@dimen/tourImage"
                android:src="@drawable/tour1"
                android:scaleType="centerCrop"
                android:fitsSystemWindows="true"
                app:layout_collapseMode="parallax"/>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#90111111"
                android:layout_alignLeft="@id/tourImage"
                android:layout_alignTop="@id/tourImage"
                android:layout_alignRight="@id/tourImage"
                android:layout_alignBottom="@id/tourImage" >
            </RelativeLayout>

            <android.support.v7.widget.Toolbar
                android:id="@+id/toolbar"
                android:layout_width="match_parent"
                android:layout_height="?android:attr/actionBarSize"
                app:popupTheme="@style/ThemeOverlay.AppCompat.Dark"
                app:layout_collapseMode="pin">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <ImageButton
                        android:id="@+id/back_btn"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_alignParentLeft="true"
                        android:layout_centerVertical="true"
                        android:background="@null"
                        android:padding="5dp"
                        android:src="@mipmap/back_btn"/>

                    <RelativeLayout
                        android:id="@+id/card_badge"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_alignParentRight="true"
                        android:layout_marginRight="10dp">

                        <RelativeLayout
                            android:id="@+id/btn_wrapper"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content">

                            <Button
                                android:id="@+id/open_cart"
                                android:layout_width="30dp"
                                android:layout_height="30dp"
                                android:background="@mipmap/ic_add"/>

                        </RelativeLayout>
                    </RelativeLayout>
                </RelativeLayout>

            </android.support.v7.widget.Toolbar>
        </android.support.design.widget.CollapsingToolbarLayout>
    </android.support.design.widget.AppBarLayout>

        <android.support.v4.widget.NestedScrollView
            android:layout_height="match_parent"
            android:layout_width="match_parent"
            app:layout_behavior="@string/appbar_scrolling_view_behavior"
            android:background="@color/colorWhite">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tourName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/mediumPadding"
                    android:text="Half Day Kula Lumpur City Tour"
                    android:textSize="@dimen/tourTitle"
                    android:textColor="@color/colorDark"
                    android:textStyle="bold"/>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingLeft="@dimen/mediumPadding"
                    android:paddingRight="@dimen/mediumPadding">

                    <TextView
                        android:id="@+id/tourDesc"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Dive into the wonders of the vast oceanarium in the heart of KL city center!"
                        android:textColor="@color/colorDark"
                        android:textSize="@dimen/mediumUniversalText" />

                    <TextView
                        android:id="@+id/tourPrice"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/tourDesc"
                        android:layout_centerHorizontal="false"
                        android:layout_centerInParent="false"
                        android:paddingBottom="@dimen/mediumPadding"
                        android:paddingTop="@dimen/mediumPadding"
                        android:text="RM38"
                        android:textColor="@color/colorDark"
                        android:textSize="@dimen/tourTitle"
                        android:textStyle="bold" />

                    <ImageButton
                        android:id="@+id/tourShare"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_above="@+id/tourGuaran"
                        android:layout_alignParentEnd="true"
                        android:layout_centerInParent="false"
                        android:paddingBottom="@dimen/mediumPadding"
                        android:paddingTop="@dimen/mediumPadding"
                        android:src="@mipmap/share" />

                    <TextView
                        android:id="@+id/tourGuaran"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/tourPrice"
                        android:paddingBottom="@dimen/mediumPadding"
                        android:paddingTop="@dimen/mediumPadding"
                        android:text="Bigcar Price Guarantee" />

                </RelativeLayout>

                <View
                    android:layout_height="1dp"
                    android:layout_width="match_parent"
                    android:background="#90909090"
                    android:layout_marginBottom="5dp"
                    android:layout_marginTop="5dp" />


                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/mediumPadding">

                    <ImageView
                        android:id="@+id/bookedImg"
                        android:layout_width="@dimen/tourNotify"
                        android:layout_height="@dimen/tourNotify"
                        android:src="@mipmap/booked" />

                    <TextView
                        android:id="@+id/booked"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingLeft="@dimen/mediumPadding"
                        android:layout_toEndOf="@+id/bookedImg"
                        android:text="10K+ Booked"
                        android:textColor="@color/colorDark"
                        android:textSize="@dimen/smallUniversalText" />

                    <ImageView
                        android:id="@+id/availableImg"
                        android:layout_width="@dimen/tourNotify"
                        android:layout_height="@dimen/tourNotify"
                        android:layout_alignParentStart="true"
                        android:layout_below="@+id/bookedImg"
                        android:layout_marginTop="10dp"
                        android:src="@mipmap/available" />

                    <TextView
                        android:id="@+id/available"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignTop="@+id/availableImg"
                        android:layout_toEndOf="@+id/availableImg"
                        android:paddingLeft="@dimen/mediumPadding"
                        android:text="Available Tomorrow"
                        android:textColor="@color/colorDark"
                        android:textSize="@dimen/smallUniversalText" />

                    <ImageView
                        android:id="@+id/instantImg"
                        android:layout_width="@dimen/tourNotify"
                        android:layout_height="@dimen/tourNotify"
                        android:layout_alignParentStart="true"
                        android:layout_below="@+id/availableImg"
                        android:layout_marginTop="10dp"
                        android:src="@mipmap/instant" />

                    <TextView
                        android:id="@+id/instant"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignTop="@+id/instantImg"
                        android:layout_toEndOf="@+id/instantImg"
                        android:paddingLeft="@dimen/mediumPadding"
                        android:text="Instant Confirmation"
                        android:textColor="@color/colorDark"
                        android:textSize="@dimen/smallUniversalText" />

                </RelativeLayout>

                <View
                    android:layout_height="1dp"
                    android:layout_width="match_parent"
                    android:layout_below="@+id/instantImg"
                    android:background="#90909090"
                    android:layout_marginBottom="5dp"
                    android:layout_marginTop="5dp" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/mediumPadding">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="\u2022"
                        android:textColor="@color/colorDark"
                        android:textSize="@dimen/smallUniversalText" />

                    <TextView
                        android:id="@+id/tourExplanation"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Board the ionic Peak Tram from our special line and enjoy hassel-free accesss to attraction...Board the ionic Peak Tram from our special line and enjoy hassel-free accesss to attraction...Board the ionic Peak Tram from our special line and enjoy hassel-free accesss to attraction...Board the ionic Peak Tram from our special line and enjoy hassel-free accesss to attraction..."
                        android:textColor="@color/colorDark"
                        android:textSize="@dimen/smallUniversalText" />

                </RelativeLayout>

                <View
                    android:layout_height="15dp"
                    android:layout_width="match_parent"
                    android:layout_below="@+id/instantImg"
                    android:background="#90909090"
                    android:layout_marginBottom="5dp"
                    android:layout_marginTop="5dp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/mediumPadding"
                    android:text="Reviews"
                    android:textColor="@color/colorDark"
                    android:textSize="@dimen/tourTitle"
                    android:textStyle="bold" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/mediumPadding">

                    <TextView
                        android:id="@+id/collectRatingText"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="4.5"
                        android:textSize="72sp"
                        android:textColor="@color/colorDark"
                        android:textStyle="bold"/>

                    <RatingBar
                        android:id="@+id/collectRating"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_toEndOf="@id/collectRatingText"
                        android:paddingLeft="@dimen/mediumPadding"
                        android:numStars="5"
                        android:stepSize="1.0"
                        android:backgroundTint="@color/colorPrimary"
                        android:progressTint="@color/colorBlue"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/collectRating"
                        android:paddingLeft="@dimen/mediumPadding"
                        android:text="1998 Views"
                        android:textColor="@color/colorDark"
                        android:textSize="@dimen/mediumUniversalText"
                        android:layout_alignStart="@id/collectRating"
                        android:layout_alignEnd="@id/collectRating"/>

                </RelativeLayout>

                <android.support.v7.widget.RecyclerView
                    android:id="@+id/tourReview"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:clipToPadding="true"
                    android:paddingBottom="16dp" />


            </LinearLayout>

        </android.support.v4.widget.NestedScrollView>

        <RelativeLayout
        android:id="@+id/add_to_cart_btn"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="@color/colorPrimary"
        android:layout_gravity="end|bottom">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:textColor="@color/colorWhite"
            android:text="ADD TO GRUB CART"
            tools:ignore="MissingPrefix"
            android:layout_centerInParent="true"/>

        </RelativeLayout>

</android.support.design.widget.CoordinatorLayout>