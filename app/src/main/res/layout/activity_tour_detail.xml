<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context="my.com.itrain.big_car.TourDetailActivity"
    android:layout_height="wrap_content"
    android:layout_width="match_parent">
    
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
    
        <ImageView
            android:id="@+id/tourImage"
            android:layout_width="match_parent"
            android:layout_height="@dimen/tourImage"
            android:src="@drawable/tour1"
            android:scaleType="fitXY" />
        
        <TextView
            android:id="@+id/tourName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/mediumPadding"
            android:text="Half Day Kula Lumpur City Tour"
            android:textSize="@dimen/tourTitle"
            android:textColor="@color/colorDark"
            android:textStyle="bold"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="@dimen/mediumPadding"
            android:paddingRight="@dimen/mediumPadding">

            <TextView
                android:id="@+id/tourDesc"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Dive into the wonders of the vast oceanarium in the heart of KL city center!"
                android:textColor="@color/colorDark"
                android:textSize="@dimen/mediumUniversalText" />

            <TextView
                android:id="@+id/tourPrice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tourDesc"
                android:layout_centerHorizontal="false"
                android:layout_centerInParent="false"
                android:paddingBottom="@dimen/mediumPadding"
                android:paddingTop="@dimen/mediumPadding"
                android:text="RM38"
                android:textColor="@color/colorDark"
                android:textSize="@dimen/tourTitle"
                android:textStyle="bold" />

            <ImageButton
                android:id="@+id/tourShare"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_above="@+id/tourGuaran"
                android:layout_alignParentEnd="true"
                android:layout_centerInParent="false"
                android:paddingBottom="@dimen/mediumPadding"
                android:paddingTop="@dimen/mediumPadding"
                android:src="@mipmap/share" />

            <TextView
                android:id="@+id/tourGuaran"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/tourPrice"
                android:paddingBottom="@dimen/mediumPadding"
                android:paddingTop="@dimen/mediumPadding"
                android:text="Bigcar Price Guarantee" />

        </RelativeLayout>

        <View
            android:layout_height="1dp"
            android:layout_width="match_parent"
            android:background="#90909090"
            android:layout_marginBottom="5dp"
            android:layout_marginTop="5dp" />


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/mediumPadding">

            <ImageView
                android:id="@+id/bookedImg"
                android:layout_width="@dimen/tourNotify"
                android:layout_height="@dimen/tourNotify"
                android:src="@mipmap/booked" />

            <TextView
                android:id="@+id/booked"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="@dimen/mediumPadding"
                android:layout_toEndOf="@+id/bookedImg"
                android:text="10K+ Booked"
                android:textColor="@color/colorDark"
                android:textSize="@dimen/smallUniversalText" />

            <ImageView
                android:id="@+id/availableImg"
                android:layout_width="@dimen/tourNotify"
                android:layout_height="@dimen/tourNotify"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/bookedImg"
                android:layout_marginTop="10dp"
                android:src="@mipmap/available" />

            <TextView
                android:id="@+id/available"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignTop="@+id/availableImg"
                android:layout_toEndOf="@+id/availableImg"
                android:paddingLeft="@dimen/mediumPadding"
                android:text="Available Tomorrow"
                android:textColor="@color/colorDark"
                android:textSize="@dimen/smallUniversalText" />

            <ImageView
                android:id="@+id/instantImg"
                android:layout_width="@dimen/tourNotify"
                android:layout_height="@dimen/tourNotify"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/availableImg"
                android:layout_marginTop="10dp"
                android:src="@mipmap/instant" />

            <TextView
                android:id="@+id/instant"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignTop="@+id/instantImg"
                android:layout_toEndOf="@+id/instantImg"
                android:paddingLeft="@dimen/mediumPadding"
                android:text="Instant Confirmation"
                android:textColor="@color/colorDark"
                android:textSize="@dimen/smallUniversalText" />

        </RelativeLayout>

        <View
            android:layout_height="1dp"
            android:layout_width="match_parent"
            android:layout_below="@+id/instantImg"
            android:background="#90909090"
            android:layout_marginBottom="5dp"
            android:layout_marginTop="5dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="@dimen/mediumPadding">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="\u2022"
                android:textColor="@color/colorDark"
                android:textSize="@dimen/smallUniversalText" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Board the ionic Peak Tram from our special line and enjoy hassel-free accesss to attraction"
                android:textColor="@color/colorDark"
                android:textSize="@dimen/smallUniversalText" />

        </LinearLayout>

        <View
            android:layout_height="5dp"
            android:layout_width="match_parent"
            android:layout_below="@+id/instantImg"
            android:background="#90909090"
            android:layout_marginBottom="5dp"
            android:layout_marginTop="5dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/universalPadding"
            android:text="Reviews"
            android:textSize="@dimen/pictureTextSmall"
            android:textColor="@color/colorDark"
            android:textStyle="bold"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:layout_width="@dimen/profileImage"
                android:layout_height="@dimen/profileImage"
                android:scaleType="centerCrop"
                android:src="@mipmap/ic_logo_round"
                android:layout_margin="@dimen/universalPadding"
                android:id="@+id/imageView2" />

            <LinearLayout
                android:id="@+id/userInfo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignTop="@+id/imageView2"
                android:layout_toEndOf="@+id/imageView2"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/pictureSmallPadding"
                    android:text="Laura"
                    android:textSize="@dimen/mediumUniversalText" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/pictureSmallPadding"
                    android:text="Nov 2017"
                    android:textSize="@dimen/mediumUniversalText" />

            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="We stayed for a week in November to celebrate our honeymoon and had a amazing time"
                android:textColor="@color/colorDark"
                android:textSize="@dimen/mediumUniversalText"
                android:layout_below="@+id/userInfo"
                android:padding="@dimen/mediumUniversalText"/>

        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="203dp"
                android:layout_height="wrap_content"
                android:padding="@dimen/universalPadding"
                android:text="RM229 per Night"
                android:textColor="@color/colorDark" />

            <Button
                android:id="@+id/checkDates"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Check Availability" />

        </LinearLayout>

    </LinearLayout>
    
</ScrollView>