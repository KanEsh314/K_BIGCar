<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context="my.com.itrain.big_car.ProfileContentFragment"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:background="@color/colorWhite">

    <android.support.design.widget.AppBarLayout
        android:id="@+id/appbar"
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
        android:fitsSystemWindows="true">

        <android.support.design.widget.CollapsingToolbarLayout
            android:id="@+id/main.collapsing"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:contentScrim="@color/start_page_overlay"

            android:fitsSystemWindows="true">

            <ImageView
                android:id="@+id/main.backdrop"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerCrop"
                android:fitsSystemWindows="true"
                android:src="@drawable/tour2"
                app:layout_collapseMode="parallax"
                />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#90000000"
                android:layout_alignLeft="@id/main.backdrop"
                android:layout_alignTop="@id/main.backdrop"
                android:layout_alignRight="@id/main.backdrop"
                android:layout_alignBottom="@id/main.backdrop"
                android:fitsSystemWindows="true">
            </RelativeLayout>

            <android.support.v7.widget.Toolbar
                android:id="@+id/more_toolbar"
                android:layout_width="match_parent"
                android:layout_height="?android:attr/actionBarSize"
                app:popupTheme="@style/ThemeOverlay.AppCompat.Light"
                app:layout_collapseMode="pin">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <TextView
                        android:id="@+id/auth_button"
                        android:layout_marginRight="10dp"
                        android:layout_marginTop="20dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:text="Log In"
                        android:textSize="17sp"
                        android:textColor="@color/colorWhite"
                        android:clickable="true"
                        fontPath="fonts/SourceSansPro-Regular.ttf"
                        tools:ignore="MissingPrefix"/>

                </RelativeLayout>

            </android.support.v7.widget.Toolbar>

        </android.support.design.widget.CollapsingToolbarLayout>
    </android.support.design.widget.AppBarLayout>

    <android.support.v4.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingTop="60dp">

            <RelativeLayout
                android:id="@+id/profile"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/name_user"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="18sp"
                    android:lineSpacingExtra="8dp"
                    android:text="Username"
                    android:textColor="@color/product_name"
                    fontPath="fonts/SourceSansPro-Semibold.ttf"
                    tools:ignore="MissingPrefix"
                    android:textAlignment="center"
                    android:layout_centerHorizontal="true"
                    android:layout_marginBottom="5dp"/>

                <TextView
                    android:id="@+id/location_user"
                    android:layout_below="@id/name_user"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Country"
                    android:textSize="16sp"
                    android:lineSpacingExtra="8dp"
                    android:textColor="@color/card_sub_title"
                    fontPath="fonts/SourceSansPro-Regular.ttf"
                    tools:ignore="MissingPrefix"
                    android:textAlignment="center"
                    android:layout_centerHorizontal="true"
                    android:layout_marginBottom="10dp"/>

                <!-- SEPERATOR -->
                <RelativeLayout
                    android:id="@+id/seperator"
                    android:layout_width="50dp"
                    android:layout_height="2dp"
                    android:background="@color/colorPrimary"
                    android:layout_below="@id/location_user"
                    android:layout_marginBottom="20dp"
                    android:layout_centerHorizontal="true">

                </RelativeLayout>

                <android.support.percent.PercentRelativeLayout
                    android:id="@+id/saving"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/seperator"
                    android:paddingLeft="20dp"
                    android:paddingRight="20dp">

                </android.support.percent.PercentRelativeLayout>

            </RelativeLayout>


            <RelativeLayout
                android:id="@+id/wrapper_acc_details"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/profile">

                <TextView
                    android:id="@+id/acc_details_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="ACCOUNT DETAIL"
                    fontPath="fonts/SourceSansPro-Regular.ttf"
                    tools:ignore="MissingPrefix"
                    android:textSize="14sp"
                    android:paddingLeft="20dp"
                    android:paddingTop="20dp"
                    android:textColor="@color/card_sub_title"
                    android:layout_marginBottom="10dp"/>

                <Button
                    android:id="@+id/open_address"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_below="@id/acc_details_title"
                    android:background="@drawable/list_button"
                    android:drawableEnd="@mipmap/icon_right"
                    android:text="Add Address"
                    android:maxLines="1"
                    android:ellipsize="end"
                    android:paddingLeft="20dp"
                    android:paddingRight="20dp"
                    android:textAlignment="textStart"
                    android:textSize="16sp"
                    android:textColor="@color/product_name"
                    fontPath="fonts/SourceSansPro-Regular.ttf"
                    android:textAllCaps="false"
                    tools:ignore="MissingPrefix"/>

                <Button
                    android:id="@+id/open_name"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_below="@id/open_address"
                    android:background="@drawable/list_button"
                    android:drawableEnd="@mipmap/icon_right"
                    android:text="Edit Profile"
                    android:maxLines="1"
                    android:ellipsize="end"
                    android:paddingLeft="20dp"
                    android:paddingRight="20dp"
                    android:textAlignment="textStart"
                    android:textSize="16sp"
                    android:textColor="@color/product_name"
                    fontPath="fonts/SourceSansPro-Regular.ttf"
                    android:textAllCaps="false"
                    tools:ignore="MissingPrefix"/>

                <Button
                    android:id="@+id/change_password"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_below="@id/open_name"
                    android:background="@drawable/list_button"
                    android:drawableEnd="@mipmap/icon_right"
                    android:text="Change Password"
                    android:maxLines="1"
                    android:ellipsize="end"
                    android:paddingLeft="20dp"
                    android:paddingRight="20dp"
                    android:textAlignment="textStart"
                    android:textSize="16sp"
                    android:textColor="@color/product_name"
                    fontPath="fonts/SourceSansPro-Regular.ttf"
                    android:textAllCaps="false"
                    tools:ignore="MissingPrefix" />

                <Button
                    android:id="@+id/user_vouchers"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_below="@id/change_password"
                    android:background="@drawable/list_button"
                    android:drawableEnd="@mipmap/icon_right"
                    android:text="Vouchers"
                    android:maxLines="1"
                    android:ellipsize="end"
                    android:paddingLeft="20dp"
                    android:paddingRight="20dp"
                    android:textAlignment="textStart"
                    android:textSize="16sp"
                    android:textColor="@color/product_name"
                    fontPath="fonts/SourceSansPro-Regular.ttf"
                    tools:ignore="MissingPrefix"
                    android:textAllCaps="false"/>

                <Button
                    android:id="@+id/user_wishlist"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_below="@id/user_vouchers"
                    android:background="@drawable/list_button"
                    android:drawableEnd="@mipmap/icon_right"
                    android:text="Wishlist"
                    android:maxLines="1"
                    android:ellipsize="end"
                    android:paddingLeft="20dp"
                    android:paddingRight="20dp"
                    android:textAlignment="textStart"
                    android:textSize="16sp"
                    android:textColor="@color/product_name"
                    fontPath="fonts/SourceSansPro-Regular.ttf"
                    tools:ignore="MissingPrefix"
                    android:textAllCaps="false" />

                <Button
                    android:id="@+id/user_earn_rewards"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_below="@id/user_wishlist"
                    android:background="@drawable/list_button"
                    android:drawableEnd="@mipmap/icon_right"
                    android:text="Earn Rewards"
                    android:maxLines="1"
                    android:ellipsize="end"
                    android:paddingLeft="20dp"
                    android:paddingRight="20dp"
                    android:textAlignment="textStart"
                    android:textSize="16sp"
                    android:textColor="@color/product_name"
                    fontPath="fonts/SourceSansPro-Regular.ttf"
                    tools:ignore="MissingPrefix"
                    android:textAllCaps="false"
                    android:layout_marginBottom="10dp"/>

                <TextView
                    android:id="@+id/social_media_title"
                    android:layout_below="@id/user_earn_rewards"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="FOLLOW US"
                    fontPath="fonts/SourceSansPro-Regular.ttf"
                    tools:ignore="MissingPrefix"
                    android:textSize="14sp"
                    android:paddingLeft="20dp"
                    android:paddingTop="20dp"
                    android:textColor="@color/card_sub_title"
                    android:layout_marginBottom="10dp"/>

                <Button
                    android:id="@+id/go_to_fb"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_below="@id/social_media_title"
                    android:background="@drawable/list_button"
                    android:drawableEnd="@mipmap/icon_right"
                    android:maxLines="1"
                    android:ellipsize="end"
                    android:paddingLeft="20dp"
                    android:text="Facebook"
                    android:paddingRight="20dp"
                    android:textAlignment="textStart"
                    android:textSize="16sp"
                    android:textColor="@color/product_name"
                    fontPath="fonts/SourceSansPro-Regular.ttf"
                    android:textAllCaps="false"
                    tools:ignore="MissingPrefix"/>

                <Button
                    android:id="@+id/go_to_ig"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_below="@id/go_to_fb"
                    android:background="@drawable/list_button"
                    android:drawableEnd="@mipmap/icon_right"
                    android:maxLines="1"
                    android:ellipsize="end"
                    android:paddingLeft="20dp"
                    android:text="Instagram"
                    android:paddingRight="20dp"
                    android:textAlignment="textStart"
                    android:textSize="16sp"
                    android:textColor="@color/product_name"
                    fontPath="fonts/SourceSansPro-Regular.ttf"
                    android:textAllCaps="false"
                    tools:ignore="MissingPrefix"/>

                <Button
                    android:id="@+id/go_to_twitter"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_below="@id/go_to_ig"
                    android:background="@drawable/list_button"
                    android:drawableEnd="@mipmap/icon_right"
                    android:maxLines="1"
                    android:ellipsize="end"
                    android:paddingLeft="20dp"
                    android:text="Twitter"
                    android:paddingRight="20dp"
                    android:textAlignment="textStart"
                    android:textSize="16sp"
                    android:textColor="@color/product_name"
                    fontPath="fonts/SourceSansPro-Regular.ttf"
                    android:textAllCaps="false"
                    tools:ignore="MissingPrefix"/>

                <Button
                    android:id="@+id/go_to_web"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_below="@id/go_to_twitter"
                    android:background="@drawable/list_button"
                    android:drawableEnd="@mipmap/icon_right"
                    android:maxLines="1"
                    android:ellipsize="end"
                    android:paddingLeft="20dp"
                    android:text="Website"
                    android:paddingRight="20dp"
                    android:textAlignment="textStart"
                    android:textSize="16sp"
                    android:textColor="@color/product_name"
                    fontPath="fonts/SourceSansPro-Regular.ttf"
                    android:textAllCaps="false"
                    tools:ignore="MissingPrefix"
                    android:layout_marginBottom="10dp"/>

                <TextView
                    android:id="@+id/others_title"
                    android:layout_below="@id/go_to_web"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="OTHERS"
                    fontPath="fonts/SourceSansPro-Regular.ttf"
                    tools:ignore="MissingPrefix"
                    android:textSize="14sp"
                    android:paddingLeft="20dp"
                    android:paddingTop="20dp"
                    android:textColor="@color/card_sub_title"
                    android:layout_marginBottom="10dp"/>

                <Button
                    android:id="@+id/send_feedback"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_below="@id/others_title"
                    android:background="@drawable/list_button"
                    android:drawableEnd="@mipmap/icon_right"
                    android:maxLines="1"
                    android:ellipsize="end"
                    android:paddingLeft="20dp"
                    android:text="Feedback &amp; Suggestion"
                    android:paddingRight="20dp"
                    android:textAlignment="textStart"
                    android:textSize="16sp"
                    android:textColor="@color/product_name"
                    fontPath="fonts/SourceSansPro-Regular.ttf"
                    android:textAllCaps="false"
                    tools:ignore="MissingPrefix"/>

                <Button
                    android:id="@+id/open_walkthrough"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_below="@id/send_feedback"
                    android:background="@drawable/list_button"
                    android:drawableEnd="@mipmap/icon_right"
                    android:maxLines="1"
                    android:ellipsize="end"
                    android:paddingLeft="20dp"
                    android:paddingRight="20dp"
                    android:text="Walkthrough"
                    android:textAlignment="textStart"
                    android:textSize="16sp"
                    android:textColor="@color/product_name"
                    fontPath="fonts/SourceSansPro-Regular.ttf"
                    android:textAllCaps="false"
                    tools:ignore="MissingPrefix"
                    android:layout_marginBottom="15dp"/>

            </RelativeLayout>

        </RelativeLayout>
    </android.support.v4.widget.NestedScrollView>

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/user_dp"
        android:layout_height="100dp"
        android:layout_width="100dp"
        app:fabSize="normal"
        android:layout_margin="16dp"
        app:layout_anchor="@id/appbar"
        app:layout_anchorGravity="bottom|center"
        android:src="@mipmap/app_logo_dark"
        app:civ_border_width="2dp"
        android:translationZ="100000dp"
        app:civ_border_color="@color/colorWhite"/>

</android.support.design.widget.CoordinatorLayout>