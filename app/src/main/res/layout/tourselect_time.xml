<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/tourTime"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/tourSelectText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/tourSelectTime"
            android:layout_toEndOf="@+id/tourSelectTime"
            android:text="12:00"
            android:textColor="@color/colorDark"
            android:textSize="@dimen/smallUniversalText" />

        <RadioButton
            android:id="@+id/tourSelectTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:buttonTint="@color/colorPrimary" />

    </RelativeLayout>

</android.support.v7.widget.CardView>