<?xml version="1.0" encoding="utf-8"?>
    <android.support.v7.widget.CardView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/cardViewContent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:id="@+id/commonContent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/mediumPadding">

            <ImageView
                android:id="@+id/trendImg"
                android:layout_width="@dimen/pictureWidth"
                android:layout_height="@dimen/pictureHeight"
                android:src="@drawable/photo" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="68dp"
                android:layout_below="@id/trendImg"
                android:orientation="vertical"
                android:paddingRight="16dp"
                android:paddingLeft="16dp">

                <TextView
                    android:id="@+id/trendText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Photo Description"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/trendPrice"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/trendText"
                    android:text="Photo Price"
                    android:textSize="12sp" />

            </LinearLayout>

            <ImageButton
                android:id="@+id/trendLike"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_margin="5dp"
                android:backgroundTint="@color/colorWhite"
                android:layout_alignEnd="@+id/trendImg"
                android:layout_alignTop="@+id/trendImg"
                android:src="@drawable/ic_like" />

        </RelativeLayout>

    </android.support.v7.widget.CardView>