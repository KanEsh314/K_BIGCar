<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="@dimen/largeMargin"
    app:cardCornerRadius="8dp">

    <LinearLayout
        android:id="@+id/placeContent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingBottom="@dimen/mediumPadding">

        <ImageView
            android:id="@+id/nearByImg"
            android:layout_width="match_parent"
            android:layout_height="240dp"
            android:scaleType="centerCrop"
            android:src="@drawable/photo" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_below="@id/nearByImg"
            android:layout_alignStart="@id/nearByImg"
            android:layout_alignEnd="@id/nearByImg"
            android:paddingTop="@dimen/mediumPadding"
            android:paddingLeft="@dimen/mediumPadding">

            <TextView
                android:id="@+id/nearByName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="HALF DAY KUALA LUMPUR CITY TOUR TOUR"
                android:textColor="@color/colorDark"
                android:textSize="@dimen/mediumUniversalText"
                android:textAlignment="textStart"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/nearByDesc"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="For short or long tern visitors in Kuala Lumpur this is perfect opportunity to visit landmarks to Kuala Lumpur city. On tour we will take you to some of most important sightseeing attractions."
                android:textColor="@color/colorDark"
                android:textSize="@dimen/smallUniversalText"
                android:textAlignment="textStart"/>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_below="@+id/nearByDesc">

                <TextView
                    android:id="@+id/nearByLocation"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentTop="true"
                    android:text="RM40"
                    android:textColor="@color/colorDark"
                    android:textSize="@dimen/mediumUniversalText" />

            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</android.support.v7.widget.CardView>