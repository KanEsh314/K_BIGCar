<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <fragment xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/map"
        android:name="com.google.android.gms.maps.SupportMapFragment"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context="my.com.itrain.big_car.BrowseContentFragment" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/mediumPadding"
        android:orientation="vertical">

        <EditText
            android:id="@+id/pickup"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/colorWhite"
            android:layout_weight="4"
            android:padding="@dimen/smallPadding"
            android:hint="Pick Up Point" />

        <EditText
            android:id="@+id/dropoff"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/colorWhite"
            android:layout_weight="4"
            android:padding="@dimen/smallPadding"
            android:hint="Drop Off Point" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="@color/colorWhite">

            <Spinner
                android:id="@+id/trip_type"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="@dimen/smallPadding"
                android:layout_weight="3"
                android:entries="@array/trip_type_arrays"
                android:prompt="@string/trip_type_prompt"/>

            <Spinner
                android:id="@+id/trip_payment_method"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="@dimen/smallPadding"
                android:layout_weight="3"
                android:entries="@array/trip_payment_arrays"
                android:prompt="@string/trip_payment_prompt"/>

            <Spinner
                android:id="@+id/trip_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="@dimen/smallPadding"
                android:layout_weight="3"
                android:entries="@array/trip_type_arrays"/>

        </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <EditText
                    android:id="@+id/trip_promo_code"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/colorWhite"
                    android:layout_weight="2"
                    android:padding="@dimen/smallPadding"
                    android:hint="Promo Code"/>

                <EditText
                    android:id="@+id/trip_driver_notes"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="2"
                    android:background="@color/colorWhite"
                    android:hint="Notes To Driver"
                    android:padding="@dimen/smallPadding" />

            </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="80dp"
        android:paddingRight="@dimen/mediumPadding"
        android:paddingLeft="@dimen/mediumPadding">

        <Spinner
            android:id="@+id/vehicle_spinner"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/mediumPadding"
            android:background="@color/colorWhite"
            android:entries="@array/trip_type_arrays"
            android:spinnerMode="dialog"/>

    </LinearLayout>
</RelativeLayout>



