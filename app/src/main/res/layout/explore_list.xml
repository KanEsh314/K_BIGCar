<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_height="wrap_content"
    android:layout_width="wrap_content"
    android:orientation="vertical"
    android:padding="@dimen/pictureSmallPadding">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/contentTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Experiences"
            android:textColor="@color/colorDark"
            android:textSize="@dimen/exploreTitle"
            android:textStyle="bold" />

        <include layout="@layout/explore_content"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/contentPlaceTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Experience in "
            android:textColor="@color/colorDark"
            android:textSize="@dimen/exploreTitle"
            android:textStyle="bold"/>

        <include layout="@layout/explore_placecontent"/>

    </LinearLayout>

</LinearLayout>