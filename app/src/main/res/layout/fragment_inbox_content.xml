<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/happycutomer"
    tools:context="my.com.itrain.big_car.InboxContentFragment" >

    <TextView
        android:id="@+id/inboxTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/inboxTitle"
        android:textSize="21sp"
        android:layout_margin="@dimen/universalMargin"
        android:textColor="@color/colorDark"/>

    <LinearLayout
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/purposeMargin"
        android:layout_gravity="center"
        android:background="@color/colorAccent"
        android:orientation="vertical"
        android:padding="@dimen/universalPadding">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/nomessage"
            android:textAlignment="center"
            android:textColor="@color/colorDark"
            android:textSize="@dimen/subUniversalText" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/universalPadding"
            android:text="@string/inboxEmpty"
            android:textAlignment="center"
            android:textColor="@color/colorDark"
            android:textSize="@dimen/mediumUniversalText" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="@string/inboxButton" />

    </LinearLayout>

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/bell"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|right"
        android:layout_margin="16dp"
        android:src="@drawable/ic_bell"
        app:layout_anchor="@id/inboxTitle"
        app:layout_anchorGravity="bottom|right|end"
        app:backgroundTint="@color/colorFABPressed" />

    <android.support.design.widget.FloatingActionButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|right"
        android:layout_margin="16dp"
        android:src="@drawable/ic_notify"
        app:layout_anchor="@id/bell"
        app:layout_anchorGravity="bottom|right|end"
        app:backgroundTint="@color/colorFABPressed"/>

</LinearLayout>
