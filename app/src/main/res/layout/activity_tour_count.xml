<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tool="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#F5F5F5"
    android:fitsSystemWindows="true"
    tool:context="my.com.itrain.big_car.TourCountActivity">

    <android.support.design.widget.AppBarLayout
        android:id="@+id/appbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <android.support.design.widget.CollapsingToolbarLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:layout_scrollFlags="scroll|exitUntilCollapsed">

            <android.support.v7.widget.Toolbar
                android:layout_width="match_parent"
                android:layout_height="?attr/actionBarSize"
                app:layout_collapseMode="pin">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <ImageButton
                        android:id="@+id/back_btn"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_alignParentLeft="true"
                        android:layout_centerVertical="true"
                        android:background="@null"
                        android:padding="5dp"
                        android:src="@mipmap/back_btn"/>

                    <RelativeLayout
                        android:id="@+id/card_badge"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_toEndOf="@id/back_btn"
                        android:padding="@dimen/mediumPadding">

                        <RelativeLayout
                            android:id="@+id/btn_wrapper"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content">

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:text="Booking Option"
                                android:textSize="@dimen/mediumUniversalText"
                                android:textColor="@color/colorDark"
                                android:textStyle="bold"/>

                        </RelativeLayout>
                    </RelativeLayout>
                </RelativeLayout>

            </android.support.v7.widget.Toolbar>
        </android.support.design.widget.CollapsingToolbarLayout>
    </android.support.design.widget.AppBarLayout>

    <android.support.v4.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/mediumPadding">

                <TextView
                    android:id="@+id/textView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentTop="true"
                    android:text="Select Time"
                    android:textColor="@color/colorDark"
                    android:textSize="@dimen/mediumUniversalText" />

                <android.support.v7.widget.RecyclerView
                    android:id="@+id/recycleTourTime"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_below="@+id/textView"
                    android:layout_marginTop="11dp"
                    android:clipToPadding="true"
                    android:paddingBottom="16dp" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/recycleTourTime">

                    <TextView
                        android:id="@+id/packageOption"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingBottom="@dimen/mediumPadding"
                        android:text="Package Quantity"
                        android:textColor="@color/colorDark"
                        android:textSize="@dimen/mediumUniversalText"/>

                    <RelativeLayout
                        android:id="@+id/parentCount"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/packageOption"
                        android:padding="@dimen/mediumPadding"
                        android:background="@color/colorWhite">

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:orientation="vertical" >

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Adult"
                                android:textColor="@color/colorDark"
                                android:textSize="@dimen/mediumUniversalText" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="RM 180"
                                android:textSize="@dimen/mediumUniversalText"
                                android:textColor="@color/colorDark" />

                        </LinearLayout>

                        <Spinner
                            android:id="@+id/adultSpinner"
                            android:layout_width="60dp"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:layout_centerVertical="true" />

                            <TextView
                                android:id="@+id/valurOfAdult"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_centerVertical="true"
                                android:layout_toLeftOf="@+id/adultSpinner"
                                android:text="1"
                                android:inputType="number"
                                android:textColor="@color/colorDark"
                                android:textSize="@dimen/largeUniversalText"/>

                    </RelativeLayout>

                    <RelativeLayout
                        android:id="@+id/childCount"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/parentCount"
                        android:padding="@dimen/mediumPadding"
                        android:background="@color/colorWhite">

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:orientation="vertical" >

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Children"
                                android:textColor="@color/colorDark"
                                android:textSize="@dimen/mediumUniversalText" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="RM 150"
                                android:textSize="@dimen/mediumUniversalText"
                                android:textColor="@color/colorDark" />

                        </LinearLayout>

                        <Spinner
                            android:id="@+id/childSpinner"
                            android:layout_width="60dp"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:layout_centerVertical="true" />

                        <TextView
                            android:id="@+id/valurOfChild"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_toLeftOf="@+id/childSpinner"
                            android:text="1"
                            android:inputType="number"
                            android:textColor="@color/colorDark"
                            android:textSize="@dimen/largeUniversalText"/>

                    </RelativeLayout>

                    <RelativeLayout
                        android:id="@+id/seniorCount"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/childCount"
                        android:padding="@dimen/mediumPadding"
                        android:background="@color/colorWhite">

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:orientation="vertical" >

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Senior"
                                android:textColor="@color/colorDark"
                                android:textSize="@dimen/mediumUniversalText" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="RM 150"
                                android:textSize="@dimen/mediumUniversalText"
                                android:textColor="@color/colorDark" />

                        </LinearLayout>

                        <Spinner
                            android:id="@+id/seniorSpinner"
                            android:layout_width="60dp"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:layout_centerVertical="true" />

                        <TextView
                            android:id="@+id/valurOfSenior"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_toLeftOf="@+id/seniorSpinner"
                            android:text="1"
                            android:inputType="number"
                            android:textColor="@color/colorDark"
                            android:textSize="@dimen/largeUniversalText"/>

                    </RelativeLayout>
                </RelativeLayout>
            </RelativeLayout>

    </android.support.v4.widget.NestedScrollView>

</android.support.design.widget.CoordinatorLayout>