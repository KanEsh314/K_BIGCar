<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:context="my.com.itrain.big_car.TourCountActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Who's Coming?"
            android:textColor="@color/colorDark"
            android:textStyle="bold"
            android:textSize="@dimen/largeUniversalText"
            android:padding="@dimen/universalPadding"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_margin="@dimen/universalMargin">

            <TextView
                android:id="@+id/tourOwnerName"
                android:layout_width="268dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:text="Kan Esh"
                android:textColor="@color/colorDark"
                android:textSize="@dimen/pictureTextSmall" />

            <ImageView
                android:id="@+id/tourOwnerPic"
                android:layout_width="@dimen/tourAvailabilitySize"
                android:layout_height="@dimen/tourAvailabilitySize"
                android:src="@mipmap/ic_logo_round" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_margin="@dimen/universalMargin">

            <TextView
                android:layout_width="268dp"
                android:layout_height="wrap_content"
                android:text="Add Another Guest"
                android:textColor="@color/colorDark"
                android:textSize="@dimen/pictureTextSmall"
                android:layout_gravity="center_vertical"/>

            <ImageView
                android:id="@+id/addGuest"
                android:layout_width="@dimen/tourAvailabilitySize"
                android:layout_height="@dimen/tourAvailabilitySize"
                android:src="@mipmap/ic_add"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_margin="@dimen/universalMargin">

            <TextView
                android:layout_width="268dp"
                android:layout_height="wrap_content"
                android:text="Add a guest Under 18 years old"
                android:textSize="@dimen/pictureTextSmall"
                android:textColor="@color/colorDark"
                android:layout_gravity="center_vertical"/>

            <ImageView
                android:id="@+id/partiUnder"
                android:layout_width="@dimen/tourAvailabilitySize"
                android:layout_height="@dimen/tourAvailabilitySize"
                android:src="@mipmap/ic_add"/>

        </LinearLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/universalMargin">

            <TextView
                android:id="@+id/tourPrice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="RM205 per person"
                android:textColor="@color/colorDark"
                android:textSize="@dimen/pictureTextSmall" />

            <TextView
                android:id="@+id/nextConfirm"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentTop="true"
                android:text="Next"
                android:textColor="@color/colorDark"
                android:textSize="@dimen/largeUniversalText" />

        </RelativeLayout>

    </LinearLayout>
</ScrollView>
